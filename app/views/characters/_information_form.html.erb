  <%= form.hidden_field :character_id, value: params[:id] %>

  <!-- 新規作成なら削除ボックス非表示 -->
  <% if form.object.id.present? %>
    <div>
      <%= "削除対象はチェックを入れる" %>
      <%= form.check_box "_destroy" %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <div class="radio-button-form">
      <%= form.collection_radio_buttons :title_id, Title.all, :id, :name, form.object.title_id.blank? ? {checked: 1} : {checked: form.object.title_id} %>
    </div>
  </div>

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.select :height, [*140..200] %> cm
  </div>

  <div class="field">
    <%= form.label :hobby %>
    <%= form.text_field :hobby %>
  </div>

  <div class="field">
    <%= form.label :favorite %>
    <%= form.text_field :favorite %>
  </div>
